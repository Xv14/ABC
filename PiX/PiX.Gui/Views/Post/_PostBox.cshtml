@model PiX.Gui.Models.Post.PostModels

@{string path = "~/Content/images/"+@Model.Image;}
<div style="float:left; margin:5px;">
    <p>@Model.Title</p>
    <img alt="Post" src="@Url.Content(path)" width="200" height="400" />
    <p>@Model.Description</p>
    <p>@Html.ActionLink("Details", "Details", new { id = Model.Id })</p>
    <p>@Html.ActionLink("Edit", "Edit", new { id = Model.Id })</p>
    <p>@Html.ActionLink("Delete", "Delete", new { id = Model.Id })</p>
</div>

